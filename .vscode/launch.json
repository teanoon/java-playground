    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Application",
            "request": "launch",
            "mainClass": "com.example.jvm.Application",
            "projectName": "jvm",
            "vmArgs": "-Xlog:safepoint,gc*=info"
        },
        {
            "type": "java",
            "name": "Launch Jvm Big Object Allocation",
            "request": "launch",
            "mainClass": "com.example.jvm.BigObjectAllocation",
            "projectName": "jvm",
            "vmArgs": "-Xms20M -Xmx20M -Xmn10M -Xlog:safepoint,gc*=info"
        },
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        }
    ]
}
