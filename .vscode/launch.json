    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Jvm App",
            "request": "launch",
            "mainClass": "com.example.jvm.Application",
            "projectName": "jvm",
            "vmArgs": "-Xmx256m -Xms256m -Dcom.sun.management.jmxremote -Dcom.sun.management.jmxremote.port=1089 -Dcom.sun.management.jmxremote.ssl=false -Dcom.sun.management.jmxremote.authenticate=false"
        },
        {
            "type": "java",
            "name": "Launch Product Api",
            "request": "launch",
            "mainClass": "com.example.product.Application",
            "projectName": "product-service"
        },
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        }
    ]
}
